{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:types": "tsc -b tsconfig.types.json ",
    "start:repl": "nest start --entryFile entrypoints/repl/main",
    "start:api": "nest start --entryFile entrypoints/api/main",
    "start:react-static": "nest start --entryFile entrypoints/reactStatic/main",
    "start:react-ssr": "nest start --entryFile entrypoints/reactSSR/main",
    "start:nextjs": "nest start --entryFile entrypoints/nextjs/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev:repl": "ENTRY_FILE=src/entrypoints/repl/main nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "dev:api": "ENTRY_FILE=src/entrypoints/api/main nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "dev:react-static": "ENTRY_FILE=src/entrypoints/reactStatic/main nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "dev:react-ssr": "ENTRY_FILE=src/entrypoints/reactSSR/main nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "dev:nextjs": "ENTRY_FILE=src/entrypoints/nextjs/main nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk",
    "test:e2e": "vitest --config ./test/vitest-e2e.config.ts",
    "test:ci": "vitest run"
  },
  "dependencies": {
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/devtools-integration": "^0.1.6",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/swagger": "^7.1.6",
    "@trpc/server": "^10.45.2",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.2",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "postgres": "^3.4.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.11",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.1.3",
    "@swc/core": "^1.10.1",
    "@types/express": "^4.17.17",
    "@types/folder-hash": "^4.0.4",
    "@types/node": "^20.4.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "folder-hash": "^4.1.0",
    "prettier": "^3.0.0",
    "run-script-webpack-plugin": "^0.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig": "*",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "unplugin-swc": "^1.5.1",
    "vitest": "^2.1.8",
    "webpack": "^5.88.2",
    "webpack-node-externals": "^3.0.0"
  }
}